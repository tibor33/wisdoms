#:kivy 1.0

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        Button:
            text: 'Get wisdom'
#            background_normal: ''
#            background_color: (0, 1, 0, 0.5)
#            font_size: 50
            size_hint: (1, 0.2)
#            on_press: app.callback_get_wisdom()
            on_press: root.callback_get_wisdom()

        ScrollView
            Label:
                id: wisdom_text_id
                padding_x: 30
                padding_y: 30
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
                text: root.wisdom_text_id
#                text: 'yay moo cow foo bar moo baa ' * 100
              

        Button:
            text: 'I live by'
            on_press: root.callback_update_GOOD()
            size_hint: (1, 0.2)

        Button:
            text: 'I will try'
            on_press: root.callback_update_BAD()
            size_hint: (1, 0.2)
	    

        Button:
            text: 'Show menu'
 #           font_size: 25
            size_hint: (1, 0.2)
            on_press: root.manager.current = 'menu'

        Button:
            text: 'Add wisdom'
            size_hint: (1, 0.2)
            on_press: root.callback_add_wisdom()



<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 5 
        Button:
            text: 'Show implemented'
            on_press: root.manager.current = 'implemented'

        Button:
            text: 'Show Will try'
            on_press: root.manager.current = 'will_try'
        Button:
            text: 'Back to Main'
            on_press: root.manager.current = 'main'
            size_hint: (1, 0.2)


<ImplementedScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        ScrollView
            Label:
                padding_x: 30
                padding_y: 30
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
#                text: 'yay moo cow foo bar moo baa ' * 100
                text: root.good_text_id

        Button:
            text: 'Back to Main'
            on_press: root.manager.current = 'main'
            size_hint: (1, 0.2)

<Will_tryScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        ScrollView
            Label:
                padding_x: 30
                padding_y: 30
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
#                text: 'yay moo cow foo bar moo baa ' * 100
                text: root.bad_text_id

        Button:
            text: 'Back to Main'
            on_press: root.manager.current = 'main'
            size_hint: (1, 0.2)


